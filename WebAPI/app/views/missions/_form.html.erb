<%= form_for(@mission, html: { class: 'form-horizontal', role: 'form' }) do |f| %>

  <% if @mission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mission.errors.count, "error") %> prohibited this mission from being saved:</h2>
      <ul>
      <% @mission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :body, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Mission' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :difficulty, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= select :mission, :difficulty, @difficulties, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
